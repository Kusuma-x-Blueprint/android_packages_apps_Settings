<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="button_combination_screen"
    android:title="@string/button_combination_title">

    <com.android.settingslib.widget.IllustrationPreference
        android:key="button_combination_video" 
        settings:searchable="true"
        app:lottie_rawRes="@raw/lottie_button_combination" />

    <lineageos.preference.SecureSettingListPreference
        android:key="power_double_tap_action"
        android:title="@string/power_double_tap_action_title"
        android:summary="%s"
        android:dialogTitle="@string/power_double_tap_action_title"
        android:entries="@array/power_double_tap_action_entries"
        android:entryValues="@array/power_double_tap_action_values"
        android:defaultValue="camera" />

    <lineageos.preference.SecureSettingListPreference
        android:key="power_vol_down_action"
        android:title="@string/power_vol_down_action_title"
        android:summary="%s"
        android:dialogTitle="@string/power_vol_down_action_title"
        android:entries="@array/power_vol_down_action_entries"
        android:entryValues="@array/power_vol_down_action_values"
        android:defaultValue="screenshot" />

    <lineageos.preference.SecureSettingListPreference
        android:key="power_vol_up_action"
        android:title="@string/power_vol_up_action_title"
        android:summary="%s"
        android:dialogTitle="@string/power_vol_up_action_title"
        android:entries="@array/power_vol_up_action_entries"
        android:entryValues="@array/power_vol_up_action_values"
        android:defaultValue="none" />

    <lineageos.preference.SecureSettingListPreference
        android:key="vol_up_down_action"
        android:title="@string/vol_up_down_action_title"
        android:summary="%s"
        android:dialogTitle="@string/vol_up_down_action_title"
        android:entries="@array/vol_up_down_action_entries"
        android:entryValues="@array/vol_up_down_action_values"
        android:defaultValue="none" />

    <lineageos.preference.SecureSettingSwitchPreference
        android:key="key_combination_wakeup"
        android:title="@string/key_combination_wakeup_title"
        android:summary="@string/key_combination_wakeup_desc"
        android:defaultValue="false" />

</PreferenceScreen>
